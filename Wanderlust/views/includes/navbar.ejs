<style>
  .search-btn {
    background-color: #fe2444;
    color: white;
    height: 32px;
    border-radius: 25px;
    font-size: 0.875rem;
    padding: 0 1rem 0 1rem;
    align-items: center;
  }
  .search-btn:hover {
    background-color: #fe2444;
    color: white;
  }
  .search-btn i {
    margin-right: 0.4rem;
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
    height: 32px;
    font-size: 0.875rem;
    border: 1px solid #9aa0a6;
  }
</style>
<nav
  class="navbar navbar-expand-md navbar-light bg-white border-bottom sticky-top shadow-sm"
>
  <div class="container-fluid px-4">
    <!-- Brand -->
    <a
      class="navbar-brand d-flex align-items-center brand-logo"
      href="/listings"
    >
      <i class="fa-brands fa-airbnb text-danger"></i>
      <span class="brand-text">Wanderlust</span>
    </a>

    <!-- Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Nav Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left -->
      <div class="navbar-nav ms-3 d-flex align-items-center gap-3">
        <a class="nav-link nav-explore" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search destination"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <!-- Right -->
      <div class="navbar-nav ms-auto gap-2 align-items-center">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
        <a class="btn btn-outline-dark btn-sm rounded-pill px-4" href="/signup">
          Signup
        </a>

        <a class="btn btn-dark btn-sm rounded-pill px-4" href="/login">
          Login
        </a>
        <% } %> <% if (currUser) { %>
        <a class="btn btn-dark btn-sm rounded-pill px-4" href="/logout">
          Logout
        </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
